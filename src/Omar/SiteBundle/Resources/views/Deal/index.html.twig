{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Deal list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Startdate</th>
                <th>Absolutetarget</th>
                <th>Profit</th>
                <th>Profitpercentage</th>
                <th>Realtarget</th>
                <th>Enddate</th>
                <th>Expectedenddate</th>
                <th>Behaviour</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('deal_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{% if entity.startDate %}{{ entity.startDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.absoluteTarget }}</td>
                <td>{{ entity.profit }}</td>
                <td>{{ entity.profitPercentage }}</td>
                <td>{{ entity.realTarget }}</td>
                <td>{% if entity.endDate %}{{ entity.endDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.expectedEndDate %}{{ entity.expectedEndDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.behaviour }}</td>
                <td>{{ entity.status }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('deal_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('deal_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('deal_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
